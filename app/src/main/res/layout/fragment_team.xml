<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:padding="8dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="President:"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:id="@+id/presTextView"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vice President:"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Secretary:"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Treasurer:"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="75dp"
        android:id="@+id/presEditText"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="145dp"
        android:id="@+id/vicePresEditText"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="215dp"
        android:id="@+id/secEditText"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="285dp"
        android:id="@+id/tresEditText"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tresEditText"
        android:id="@+id/recordBtn"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/presSetTextView"
        android:textSize="20dp"
        android:layout_marginTop="50dp"
        android:text="Current President"
        android:layout_marginLeft="115dp"
        android:textStyle="bold"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vicePresSetTextView"
        android:textSize="20dp"
        android:layout_marginTop="120dp"
        android:text="Current Vice President"
        android:layout_marginLeft="160dp"
        android:textStyle="bold"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secSetTextView"
        android:textSize="20dp"
        android:layout_marginTop="190dp"
        android:text="Current Secretary"
        android:layout_marginLeft="115dp"
        android:textStyle="bold"
        android:textColor="#000"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tresSetTextView"
        android:textSize="20dp"
        android:layout_marginTop="260dp"
        android:text="Current Treasurer"
        android:layout_marginLeft="115dp"
        android:textStyle="bold"
        android:textColor="#000"/>

</RelativeLayout>